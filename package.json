{
  "name": "plantguard-api",
  "version": "0.0.0",
  "description": "The API backend for PlantGuard, an IoT plant water monitoring system, powered by Cloudflare Workers.",
  "author": {
    "name": "NexGenius",
    "email": "nexgenius@dalbitresb.com"
  },
  "homepage": "https://github.com/nexgeniusupc/plantguard-api",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexgeniusupc/plantguard-api.git"
  },
  "bugs": {
    "url": "https://github.com/nexgeniusupc/plantguard-api/issues"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.0.0",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "types": "tsc --noemit",
    "lint": "concurrently -s -n lint: \"yarn:lint:*(!fix)\"",
    "lint:ts": "concurrently -s -n lint:ts: \"yarn:lints:ts:*\"",
    "lints:ts:eslint": "eslint --cache \"**/*.ts\"",
    "lint:fix": "concurrently -s -n lint:fix: \"yarn:lint:fix:*\"",
    "lint:fix:ts": "concurrently -s -n lint:fix:ts: \"yarn:lints:fix:ts:*\"",
    "lints:fix:ts:eslint": "eslint --fix --cache \"**/*.ts\""
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "itty-router": "^4.0.23"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/eslint": "^8.44.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "typescript": "^5.2.2",
    "wrangler": "^3.15.0"
  }
}
